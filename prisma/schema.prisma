// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

// For production you should use other provider like 
// postgreSQL, mariaDB, mySQL, mongoDB or something similar, just read prisma docs
datasource db {
  provider = "sqlite"
  url      = "file:../database/database.db?socket_timeout=15&pool_timeout=5"
}

// storing session state information
model Session {
  sessionId String  @unique
  session   String?
}

model Group {
  groupId String  @unique
  name    String?
  // additional
  ban     Boolean @default(false)
  mute    Boolean @default(false)
}

model User {
  userId   String  @unique
  name     String?
  // default user language
  language String
  // user limit
  limit    Int
  // for premium users
  premium  Boolean @default(false)
  expire   Int?
}
