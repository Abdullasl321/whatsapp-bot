{
  "name": "whatsapp-bot",
  "version": "4.0.0",
  "description": "Whatsapp Bot - Node Js",
  "main": "./dist/main.js",
  "private": true,
  "scripts": {
    "build": "rimraf dist && babel src --copy-files --extensions .ts --out-dir dist && rimraf dist/types",
    "dev": "concurrently \"babel src --copy-files --extensions .ts --out-dir dist --watch\" \"nodemon --watch 'dist/**/*' ./dist/main.js\" -k",
    "format": "prettier --write \"src/**/*.+(ts|json)\"",
    "postinstall": "rimraf node_modules/@adiwajshing/baileys/node_modules/libsignal && move-cli node_modules/libsignal node_modules/@adiwajshing/baileys/node_modules/libsignal",
    "start": "node ."
  },
  "author": "arugaz",
  "repository": {
    "type": "git",
    "url": "https://github.com/ArugaZ/whatsapp-bot.git"
  },
  "bugs": {
    "url": "https://github.com/ArugaZ/whatsapp-bot/issues"
  },
  "homepage": "https://github.com/ArugaZ/whatsapp-bot",
  "license": "Apache-2.0",
  "babel": {
    "presets": [
      "@babel/preset-env",
      [
        "@babel/preset-typescript",
        {
          "allowDeclareFields": true,
          "dts": true
        }
      ]
    ],
    "plugins": [
      [
        "@babel/plugin-proposal-decorators",
        {
          "legacy": true
        }
      ],
      "minify-mangle-names"
    ],
    "comments": false,
    "generatorOpts": {
      "minified": true
    }
  },
  "dependencies": {
    "@adiwajshing/baileys": "git+https://github.com/adiwajshing/baileys",
    "@prisma/client": "^4.6.1",
    "axios": "^1.1.3",
    "cfonts": "^3.1.1",
    "qrcode-terminal": "^0.12.0",
    "rosetta": "^1.1.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.19.3",
    "@babel/core": "^7.20.2",
    "@babel/plugin-proposal-decorators": "^7.20.2",
    "@babel/preset-env": "^7.20.2",
    "@babel/preset-typescript": "^7.18.6",
    "@types/node": "^18.11.9",
    "babel-plugin-minify-mangle-names": "^0.5.1",
    "concurrently": "^7.6.0",
    "libsignal": "git+https://github.com/arugaz/libsignal-node",
    "move-cli": "^2.0.0",
    "nodemon": "^2.0.20",
    "prettier": "^2.7.1",
    "prisma": "^4.6.1",
    "rimraf": "^3.0.2",
    "typescript": "^4.9.3"
  }
}
